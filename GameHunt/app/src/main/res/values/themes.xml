<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GameHunt" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="android:solidColor">@android:color/black</item>
    </style>

    <style name="Theme.GameHunt.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#080E1F</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">1500</item>
        <item name="postSplashScreenTheme">@style/Theme.GameHunt</item>
    </style>
</resources>